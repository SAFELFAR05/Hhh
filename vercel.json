{
  "version": 2,
  "buildCommand": "npm run build",
  "builds": [
    {
      "src": "api/**.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/client/$1"
    }
  ],
  "env": {
    "YOUTUBE_API_KEY": "@youtube_api_key",
    "FERDEV_API_KEY": "@ferdev_api_key"
  }
}
